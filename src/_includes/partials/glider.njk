
<div
    x-data="{
        init() {
            new Glide(this.$refs.glide, {
                type: 'carousel',
                perView: 2,
                gap: 16,
                autoplay: 3000,
                animationDuration: 1000,
                peek: 50,
                breakpoints: {
                    670: {
                        perView: 1,
                    },
                },
            }).mount()
        },
    }"
>
    <div x-ref="glide" class="glide relative">
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                {% for image in collections.sliderImages | reverse %}
                    <li class="glide__slide | frame | cursor-grab relative">
                        <div class="glide__slide--overlay">{{ image.data.title }}</div>
                        <img src="{{ image.data.img }}" alt="{{ image.data.title }}" class="w-full">
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="glide__arrows pointer-events-none absolute inset-0 flex items-center justify-between" data-glide-el="controls">
            <!-- Previous Button -->
            <button
                class="glide__arrow glide__arrow--left relative right-2 rounded-full bg-primary pointer-events-auto disabled:opacity-50"
                data-glide-dir="<"
            >
                <span aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 p-1 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
                </span>
                <span class="sr-only">Skip to previous slide page</span>
            </button>

            <!-- Next Button -->
            <button
                class="glide__arrow glide__arrow--left relative left-2 rounded-full bg-primary pointer-events-auto disabled:opacity-50"
                data-glide-dir=">"
            >
                <span aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 p-1 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
                </span>
                <span class="sr-only">Skip to next slide page</span>
            </button>
        </div>

        <!-- Bullets -->
        <div class="glide__bullets" data-glide-el="controls[nav]">
            
            
            {% for i in range(0, collections.sliderImages.length) %}
                <button class="glide__bullet" data-glide-dir="={{ i }}"></button>
            {% endfor %}
            {# <button class="glide__bullet" data-glide-dir="=0"></button>
            <button class="glide__bullet" data-glide-dir="=1"></button>
            <button class="glide__bullet" data-glide-dir="=2"></button> #}
        </div>
    </div>
</div>